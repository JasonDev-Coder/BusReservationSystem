@model BusReservationSystem.Models.Bus
@{
    ViewData["Title"] = "Book";
}

<h1>Reserve a Bus</h1>

<h3>Are you sure you want to Book this?</h3>
<div>
    <h4>Line</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            <img class="img-responsive full-width" src="data:image/*;base64,@Convert.ToBase64String(Model.BusImage)" width="100" height="100" />
        </dd>
    </dl>

    <form asp-action="Book">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Book" class="btn btn-light" /> |
        <a asp-action="AvailableBus">Back to List</a>
    </form>
</div>
