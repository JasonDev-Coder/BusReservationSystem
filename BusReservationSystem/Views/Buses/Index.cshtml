@model BusReservationSystem.Models.BrandListModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div>
    <form asp-controller="Buses" asp-action="Index" method="GET">
        <div>
            <label>Brand</label>
            <select asp-for="BusBrand" asp-items="Model.Brands">
                <option value="">All</option>
            </select>

            <label asp-for="Capacity"></label>
            <input type="range" asp-for="Capacity" min="0" max="500" oninput="this.nextElementSibling.value = this.value" />
            <input type="text" width="50" disabled />
            <input type="submit" value="Filter" />
        </div>
    </form>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Buses[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buses[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buses[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Buses[0].BusImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Buses) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                <img class="img-responsive full-width" src="data:image/*;base64,@Convert.ToBase64String(item.BusImage)" width="100" height="100" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
